{
    "manifest_version": 3,
    "name": "Zhuzh",
    "author": "Andrews Kwesi Ankomahene",
    "short_name": "Zhuzh",
    "version": "0.6.0",
    "description": "Zhuzh refreshes your browser with inspiring wallpapers of SpaceX and provides a search bar, clock, date, and currency converter.",
    "permissions": [
        "topSites",
        "search",
        "favicon",
        "downloads",
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "icons": {
        "16": "logo-white.png",
        "48": "logo-white.png",
        "128": "logo-white.png"
    }
}